    <script>
        function validateAdminSatisfaction() {
            var adminsatisfactionValue = parseInt($('#Adminsatisfaction').val());

            if (isNaN(adminsatisfactionValue) || adminsatisfactionValue < 1 || adminsatisfactionValue > 7) {
                $('#adminSatisfactionError').text('Enter a number between 1 and 7');
                return false;
            } else {
                $('#adminSatisfactionError').text('');
                return true;
            }
        }

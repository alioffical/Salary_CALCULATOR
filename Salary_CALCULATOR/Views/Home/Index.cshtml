            var isfrshlateddl = validatefrshlateddl();
            var islstdegreeddl = validatelstdegreeddl();
            var isdegreeddl = validatedegreeddl();
            var isgenderddl = validategenderddl();
            var isareaddl = validateclassDropdown();
            var isareaddl = validateareaddl();
            var isvalidatepostDropdown = validatepostDropdown();

            if (!validateAdminSatisfaction() || !validateHafzddl() || !validateHijabddl() || !validateCompskillsddl() || !validatePersonalityddl()
                || !validatelastschoolddl() || !validateexperienceddl() || !validatecontractddll() || !validatefrshlateddl()|| !validatelstdegreeddl() 
                || !validatedegreeddl() || !validategenderddl() || !validateareaddl() || !validateclassDropdown() || !validatepostDropdown()) {
                return;
            }
            var postValue = parseInt($('#postDropdown').val()) || 0;
            var classValue = parseInt($('#classDropdown').val()) || 0;
            var AreaValue = parseInt($('#areaddl').val()) || 0;
            var GenderValue = parseInt($('#genderddl').val()) || 0;
            var DegreeValue= parseInt($('#degreeddl').val()) || 0;
            var LastDegreeValue = parseInt($('#lstdegreeddl').val()) || 0;

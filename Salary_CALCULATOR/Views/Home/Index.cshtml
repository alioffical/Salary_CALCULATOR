                <div class="d-flex">
                    <select asp-for="Post" id="Hijabddl" class="w-50 form-control">
                        <option value="">Please Select</option>
                        <option value="0">No</option>
                        <option value="1">Yes</option>
                    </select>
                </div>
                <div>
                    <span id="hijabtieddlError" class="text-danger"></span>
                </div>
